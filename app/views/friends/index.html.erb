<% if user_signed_in? %>
<h1>Friend List</h1>

<table class="table table-hover table-striped table-bordered">
  <thead class="table-dark text-light">
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>     
      <th>User Id</th>     
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.id %></td>
        <td><%= link_to friend.full_name, friend, class: 'text-decoration-none text-success' %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.user_id %></td>
        <td><%= link_to 'Destroy', friend, class: 'btn btn-outline-danger d-block mx-auto', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class: 'btn btn-secondary' %>

<% else %>
<h1>Welcome to Friends App</h1>
<p>This is the app that you can to manage your friend list</p>
<% end %>